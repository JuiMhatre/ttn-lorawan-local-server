.pagination
  white-space: nowrap
  padding: $cs.xxs
  border: 1px solid var(--c-border-neutral-light)
  background: var(--c-bg-neutral-min)
  border-radius: $br.m
  width: fit-content
  display: flex
  gap: $cs.xxs

  .item
    margin: 0

.item
  display: inline-block
  color: var(--c-text-neutral-heavy)
  font-weight: $fwv2.semibold
  user-select: none

  .link:hover
    background-color: hoverize(var(--c-bg-neutral-min-hover))

  .link
    +focus-visible()
      background-color: hoverize(var(--c-bg-neutral-min))

  .link:active
    background-color: activize(var(--c-bg-neutral-min))

  &-navigation-next
    .link
      padding: $cs.xxs
      border-radius: 0 $br.m $br.m 0

  &-navigation-prev
    .link
      padding: $cs.xxs
      border-radius: $br.m 0 0 $br.m

  &-disabled
    .link
      opacity: .4
      cursor: not-allowed

  &-active
    .link
      background-color: var(--c-text-brand-normal)
      border: 1px solid var(--c-text-brand-normal)
      color: var(--c-bg-neutral-min)
      border-radius: $br.m

      +focus-visible()
        background-color: hoverize(var(--c-text-brand-normal))

    & + .item
      a
        border-left: 0

    & + .item-break
      border-left: 0

    .link:hover
      background-color: var(--c-text-brand-normal)

  &-break
    padding: 0 $cs.xxs

.link
  padding: 0.02rem 0.6rem
  outline: 0
  text-align: center
  text-decoration: none
  cursor: pointer
  display: inline-block

.size-message
  color: var(--c-text-neutral-semilight)
  white-space: nowrap

.select-size
  :global(.select__value-container)
    padding: 0 0 0 8px
  :global(.select__indicator-separator)
    display: none
  :global(.select__control)
    min-height: 2.5rem
    cursor: pointer
    border-radius: $br.m
    box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.045), inset 0px 0px 0px 1px var(--c-bg-neutral-min)
    border: 1px solid transparent
    background: linear-gradient(to bottom, var(--c-bg-neutral-min), var(--c-bg-neutral-min)) padding-box, linear-gradient(to bottom, var(--c-gradient-neutral-light-01), var(--c-gradient-neutral-light-02)) border-box
  :global(.select__control)
    &:hover
      box-shadow: 0px 2px 2px 0px rgba(0,0,0,0.045), inset 0px 0px 0px 1px var(--c-bg-neutral-min)
      border-color: transparent
      background: linear-gradient(to bottom, var(--c-bg-neutral-min-hover), var(--c-bg-neutral-min-hover)) padding-box, linear-gradient(to bottom, var(--c-gradient-neutral-light-01), var(--c-gradient-neutral-light-02)) border-box