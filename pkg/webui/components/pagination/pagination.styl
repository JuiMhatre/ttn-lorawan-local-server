.pagination
  white-space: nowrap
  padding: $cs.xxs
  border: 1px solid var(--c-border-neutral-light)
  border-radius: $br.m
  width: fit-content

  .item
    margin: 0

.item
  display: inline-block
  color: var(--c-text-neutral-heavy)
  font-weight: $fwv2.semibold
  user-select: none

  .link:hover
    background-color: hoverize(var(--c-bg-neutral-min))

  .link
    +focus-visible()
      background-color: hoverize(var(--c-bg-neutral-min))

  .link:active
    background-color: activize(var(--c-bg-neutral-min))

  &-navigation-next
    .link
      padding: $cs.xxs
      border-radius: 0 $br.m $br.m 0

  &-navigation-prev
    .link
      padding: $cs.xxs
      border-radius: $br.m 0 0 $br.m

  &-disabled
    .link
      opacity: .4
      cursor: not-allowed

  &-active
    .link
      background-color: var(--c-text-brand-normal)
      border: 1px solid var(--c-text-brand-normal)
      color: var(--c-bg-neutral-min)
      border-radius: $br.m

      +focus-visible()
        background-color: hoverize(var(--c-text-brand-normal))

    & + .item
      a
        border-left: 0

    & + .item-break
      border-left: 0

    .link:hover
      background-color: var(--c-text-brand-normal)

  &-break
    padding: $cs.xs $cs.m
    border-right: 0

.link
  padding: $cs.xxs $cs.s
  outline: 0
  text-align: center
  text-decoration: none
  cursor: pointer
  display: inline-block

.size-message
  color: var(--c-text-neutral-semilight)
  white-space: nowrap