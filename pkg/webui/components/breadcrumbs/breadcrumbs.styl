.breadcrumbs
  overflow: hidden
  +media-query($bp.s)
    overflow: auto
    scrollbar-width: none

    &::-webkit-scrollbar
      display: none

  &-container
    display: flex
    align-items: center
    padding-inline: 0.875rem
    border-normal('bottom')
    box-sizing: border-box
    height: $breadcrumbs-bar-height

.link
  text-decoration: none

.arrow-icon
  display: block
  color: $c['grey-400']

.last
  color: $tc-deep-gray
  font-weight: $fw.bold
