.cell
  display: table-cell
  padding: $cs.m $cs.l
  vertical-align: middle
  line-height: 1.15

  +media-query($bp.s)
    padding: $cs.m $cs.xs

  &:first-child
    font-weight: 600

  &:not(&-centered):not(&-left)
    &:last-child
      text-align: right
      padding-right: 0

  &-centered
    text-align: center

  &-left
    text-align: left

  &-right
    text-align: right

  &-head
    text-transform: uppercase
    font-weight: 600
    font-size: $fsv2.s
    color: var(--c-text-neutral-light)

  &-data
    padding: $cs.l
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis

    .cell-left
      padding: $cs.l 0

  &-small
    padding-top: $cs.s
    padding-bottom: $cs.s

  &:not(&-centered):not(&-right)
    padding-left: 0

  &-head:not(&-centered):not(&-right)
    text-align: left
