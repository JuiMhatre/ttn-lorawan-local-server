.button
  reset-button()
  display: flex
  line-height: 1
  width: 100%
  padding: 1px
  text-align: inherit
  transition: color $ad.s ease-in

  &:active,
  &-active
    color: var(--c-text-neutral-heavy)
    margin-bottom: -2.3px
    .no-sort
      display: none

  &-center
    justify-content: center

.icon
  transition: transform $ad.m ease-in-out
  padding-left: $cs.xxs
