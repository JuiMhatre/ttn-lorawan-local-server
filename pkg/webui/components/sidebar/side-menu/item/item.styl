.item
  &:hover
    .fly-out-list-container
      display: block

.message
  vertical-align: middle

.expand-icon
  position: absolute
  right: $cs.xs
  top: 50%
  transform: translateY(-50%)
  transition: transform $ad.m ease-in-out

  &-open
    transform: translateY(-50%) rotate(180deg)

.fly-out-list-container
  display: none
  top: - $cs.m
  left: calc(3rem - 2px)
  position: absolute
  padding-left: 1rem
  z-index: $zi.dropdown

.fly-out-list
  position: static !important

.link
  transition: color 50ms linear
  border-radius: $br.l
  text-decoration: none
  color: $c.grey-700
  display: flex
  align-items: center
  gap: $cs.xs
  padding: $cs.xs
  position: relative
  box-sizing: border-box
  width: 100%

  .icon
    transition: color 50ms linear
    color: $c.grey-500

  &.active
    background: $c.tts-primary-150
    color: $c.grey-900

    .icon
      color: inherit

  &.disabled
    color: $c.grey-400

    .icon
      color: inherit

  &:hover
    color: $c.grey-900
    text-decoration: none

    .icon
      color: inherit

