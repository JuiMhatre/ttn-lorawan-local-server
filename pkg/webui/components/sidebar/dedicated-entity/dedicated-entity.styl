.dedicated-entity
  text-decoration: none
  line-height: 1.6rem
  color: $c.grey-900

  &-item
    display: flex

  &-label
    font-size: $fs.m
    font-weight: $fw.normal
    margin: 0 0 0 $cs.xs

  &-divider
    display: list-item
    height: 1.8rem
    margin: 0 $cs.xs 0 $cs.s
    border-left: 1px solid $c.grey-200
    background-color: $c.grey-200

  &-button
    border-radius: $br.l
    max-width: 2.5rem
    padding: 0 $cs.xs 0 0.73rem

    span
      &:not(:first-child)
        display: none

  &:hover
    .dedicated-entity-button
      justify-content: start
      max-width: 100%
      width: 100%
      padding: 0 $cs.m 0 0.73rem

      span
        &:not(:first-child)
          display: flex

    .dedicated-entity-item
      display: none
