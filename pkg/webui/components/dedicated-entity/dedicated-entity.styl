.dedicated-entity
  display: flex
  align-items: center

.label
  font-size: $fs.m
  font-weight: $fw.normal
  margin: 0 0 0 $cs.xs

.divider
  display: list-item
  height: 1.8rem
  margin: 0 $cs.xs
  border-left: 1px solid $c.grey-200
  background-color: $c.grey-200

.button
  border-radius: $br.l
  transition: 0.2s all ease-in-out

  &-hovered
    justify-content: start
    width: 100% !important
    transition: 0.2s all ease-in-out
