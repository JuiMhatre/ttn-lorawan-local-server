.container
  padding: 0 0.25rem 0 0.5rem
  position: relative

  .arrow-icon
    transform: rotate(0deg)
    transition: transform .2s

  .arrow-icon-expanded
    transform: rotate(180deg)
    transition: transform .2s

.brand-logo
  height: 1.5rem
  margin-right: $cs.xs

  +media-query($bp.s)
    display: none

.profile-picture
  height: 1.5rem !important
  width: 1.5rem !important
