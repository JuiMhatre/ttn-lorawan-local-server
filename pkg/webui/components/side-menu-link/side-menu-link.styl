.link
  transition: 0.2s all ease-in-out
  border-radius: $br.l
  text-decoration: none
  color: $c.grey-700
  display: flex
  align-items: center
  gap: $cs.xs
  padding: $cs.xs
  position: relative

  .icon
    color: $c.grey-500

  &.active
    background: $c.tts-primary-150
    color: $c.grey-900
    transition: 0.2s background ease-in-out

    .icon
      color: inherit

  &.disabled
    color: $c.grey-400

    .icon
      color: inherit

  &:hover
    color: $c.grey-900
    text-decoration: none
    transition: 0.2s color ease-in-out

    .icon
      color: inherit
