.shortcut
  transition: $ad.m all ease-in-out
  text-decoration: none
  height: 10.7rem
  border-radius: $br.l
  background: $c.tts-primary
  color: $c.white
  font-size: $fs.s
  font-weight: 590

  .icon
    font-size: 2rem !important
    display: block

  .add-icon
    font-size: 2.5rem !important
    display: none

  .title
    display: block

  &:hover
    background: #194FDA

    .title
      display: none

    .icon
      font-size: 2rem !important
      display: none

    .add-icon
      font-size: 2.5rem !important
      display: block