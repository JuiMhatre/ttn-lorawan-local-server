.label
  border-radius: 2rem
  font-weight: $fwv2.semibold
  width: fit-content

  &.success
    background: #DCFCD3
    color: #076237

  &.warning
    background: #FEC
    color: #7A4700

  &.error
    background: #FFEBEB
    color: #930026

  &.info
    background: #EAF5FF
    color: #00527C