.container
  display: none
  position: fixed
  right: 0
  top: $header-height
  width: 100%
  +media-query($bp.m)
    display: block
  +media-query($bp.s)
    top: $header-height-mobile

ul.mobile-dropdown
  width: 100%
  +media-query($bp.s)
    li.mobileDropdownItem > a, li.mobileDropdownItem > button
      padding: $cs.l 0

.user-header
  display: flex
  justify-content: space-between
  padding: $cs.xl $cs.l
  align-items: center
  border-top: 4px solid $c-divider
  position: fixed
  width: 100vw
  bottom: 0
  left: 0
  box-sizing: border-box

.user-icon
  margin-right: $cs.xs

.user-message
  display: flex
  align-items: center
  b
    margin-left: $cs.xxs
