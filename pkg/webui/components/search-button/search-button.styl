.search-button
  font-size: $fs.m
  color: $c.grey-500 !important
  width: 100%
  position: relative
  display: flex
  justify-content: space-between
  padding: $cs.xs $cs.xxs
  gap: $cs.xxs

  &-minimized
    justify-content: center

  p
    line-height: 1.4

  .icon
    font-size: $fs.xl

  .backslash-container
    height: 1.5rem
    width: 1.5rem
    text-align: center
    border-radius: $br.m
    border: 1px solid $c.grey-200
    font-size: $fs.s
    display: flex
    justify-content: center
    align-items: center
