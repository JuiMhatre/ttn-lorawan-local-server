ul.dropdown
  font-size: $fs.m
  border-radius: $br.l
  border: 1px solid var(--c-border-neutral-normal)
  list-style-type: none
  background: var(--c-bg-neutral-min)
  box-shadow: 0px 3px 16px 0px rgba(0, 0, 0, 0.06)
  position: absolute
  padding: $cs.xs
  width: max-content
  min-width: 16rem
  max-width: 24rem
  z-index: $zi.dropdown
  margin: 0

  // Pseudo element to extend the clickable area
  // to connect with the parent button when using hover.
  // The offset can be set via --dropdown-offset in the
  // consuming component.
  &.hover:before
    content: ""
    position: absolute

  &.above
    top: auto

    &:not(.vertical)
      bottom: 0

    &.vertical
      margin-bottom: var(--dropdown-offset, 0)
      bottom: 100%

      &.hover:before
        bottom: calc(-1 * var(--dropdown-offset, 0))
        left: 0
        height: var(--dropdown-offset, 0)
        width: 100%

  &.left
    left: auto

    &.vertical
      right: 0

    &:not(.vertical)
      margin-right: var(--dropdown-offset, 0)
      right: 100%

      &.hover:before
        top: 0
        right: calc(-1 * var(--dropdown-offset, 0))
        width: var(--dropdown-offset, 0)
        height: 100%

  &.below
    bottom: auto

    &:not(.vertical)
      top: 0

    &.vertical
      margin-top: var(--dropdown-offset, 0)
      top: 100%

      &.hover:before
        top: calc(-1 * var(--dropdown-offset, 0))
        left: 0
        height: var(--dropdown-offset, 0)
        width: 100%

  &.right
    right: auto

    &.vertical
      left: 0

    &:not(.vertical)
      margin-left: var(--dropdown-offset, 0)
      left: 100%

      &.hover:before
        top: 0
        left: calc(-1 * var(--dropdown-offset, 0))
        width: var(--dropdown-offset, 0)
        height: 100%

  &.larger
    li.dropdown-item
      & > a.button, & > button.button
        padding: $cs.l

  hr
    height: 1px
    background-color: var(--c-border-neutral-light)
    margin: 2px 0

  li.dropdown-header-item
    display: block
    margin-bottom: 0
    font-weight: $fw.bold

    span
      line-height: 1
      display: block
      padding: $cs.s

  li.dropdown-item
    margin-bottom: 0
    text-align: left
    position: relative

    button.button
      reset-button()
      position: relative

    & > a.button, & > button.button
      box-sizing: border-box
      line-height: 1
      display: flex
      align-items: center
      text-decoration: none
      padding: $cs.xs
      width: 100%
      min-height: 2.5rem

      &:hover
        color: var(--c-text-neutral-heavy)
        background: var(--c-bg-neutral-light)
        border-radius: $br.m

        .icon
          color: var(--c-text-neutral-heavy)

    .icon
      margin-right: $cs.xs

    &:hover
      color: var(--c-text-neutral-heavy)
      text-decoration: none

  .submenu-dropdown
    bottom: - $cs.xs
    left: calc(100% + .5rem) // Width plus padding.
    z-index: $zi.dropdown

    // Pseudo element to extend the clickable area
    // to connect with the parent button.
    &:before
      content: ""
      position: absolute
      top: 0
      left: -1rem
      width: 1rem
      height: 100%

    &-icon
      margin-right: - $cs.xs

