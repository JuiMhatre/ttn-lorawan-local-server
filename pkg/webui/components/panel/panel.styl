.panel
  min-width: 32.5rem
  max-width: 52rem
  border-radius: $br.xl
  border: 1px solid $c.grey-200
  background-color: $c.white
  box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.09)
  padding: $cs.xl

  .button
    reset-button()
    color: #1E5DFF
    font-weight: $fwv2.semibold

    &:hover
      text-decoration: underline

  .icon
    font-size: 1.5rem !important

  .title
    font-weight: $fwv2.bold
    font-size: $fsv2.l
    line-height: 1