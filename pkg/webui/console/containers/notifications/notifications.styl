.notifications-container
  border-radius: $br.s
  min-height: 85vh

.notification-list
  display: flex
  flex-direction: column
  border-right: 1px solid #E4E4E4
  border-radius: $br.m 0 0 $br.m
  background-color: white
  padding: 0 !important

.notification-items
  display: flex
  flex-direction: column

.notification-header
  border-bottom: 1px solid #E4E4E4
  align-items: center
  padding: $cs.s

.total-notifications
  border-radius: 45%
  background-color: $c-active-blue
  color: white
  padding: $cs.xxs $cs.s

.notification-preview
  position: relative
  border: none !important
  border-bottom: 1px solid #E4E4E4 !important
  border-radius: 0 !important
  box-shadow: none !important
  min-height: 5rem
  padding: $cs.xl !important
  justify-content: start !important

  &.selected
    background-color: $c-active-blue !important
    color: white !important

.notification-content
  background-color: white
  border-radius: 0 $br.m $br.m 0

.unseen-mark
  position: absolute
  top: 26px
  left: 6px

.notification-footer
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
