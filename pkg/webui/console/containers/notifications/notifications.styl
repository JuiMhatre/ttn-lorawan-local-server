.notifications-container
  border-radius: $br.s
  min-height: 85vh

.notification-list
  display: flex
  flex-direction: column
  border-right: 1px solid #E4E4E4
  border-radius: $br.m 0 0 $br.m
  background-color: white
  padding: 0 !important

  &-change-button
    color: $c-active-blue !important

.notification-header
  border-bottom: 1px solid #E4E4E4
  align-items: center
  padding: $cs.s 0

  &-icon
    top: 5px !important
    padding-right: $cs.xs

    &.notifications
      color: $c-active-blue

    &.archived
      color: $c-warning

  &-date
    font-size: 1.1rem
    padding-right: $cs.xs
    padding-left: 0
    padding-top: 0.2rem

  .total-notifications
    border-radius: 45%
    background-color: $c-active-blue
    color: white
    padding: 0 0.8rem
    margin-left: $cs.xs
    line-height: 1.6
    position: relative
    top: 5px
    height: 70%

  &-action
    display: flex
    justify-content: end

.notification-preview
  width: 100%
  position: relative
  border: none !important
  border-bottom: 1px solid #E4E4E4 !important
  border-radius: 0 !important
  box-shadow: none !important
  min-height: 7rem
  padding: $cs.l !important
  justify-content: start !important
  flex-direction: column !important
  align-items: start !important

  &.selected
    background-color: $c-active-blue !important

  &-title
    color: $tc-black
    font-weight: 600
    font-size: 1.05rem
    display: flex
    justify-content: space-between
    width: 100%

    &.selected
      color: white

      .notification-time
        color: white

    .notification-time
      font-weight: normal
      color: $tc-deep-gray

    &-text
      width: 80%
      overflow: hidden
      text-overflow: ellipsis

  &-content
    width: 100%
    color: $tc-subtle-gray
    overflow: hidden
    display: -webkit-box
    -webkit-box-orient: vertical
    -webkit-line-clamp: 2 /* start showing ellipsis when 2nd line is reached */
    white-space: pre-wrap

    &.selected
      color: white

  &.selected
    color: white

  .unseen-mark
    position: absolute
    top: 21px
    left: 2px

.notification-content
  background-color: white
  border-radius: 0 $br.m $br.m 0
