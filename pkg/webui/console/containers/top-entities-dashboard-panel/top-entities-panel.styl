.top-entities-panel
  min-height: 31rem
  &.has-entities
    min-height: 34.5rem

.entity
  &-list
    scrollbar-width: none
    &::-webkit-scrollbar
      display: none
    &-gradient
      position:absolute
      bottom: 0px
      left: 0px
      width: 100%
      height: 98px
      border-radius: 0px 0px 14px 14px
      background: linear-gradient(180deg, rgba(255, 255, 255, 0.20) 0%, #FFF 64.58%)
  &-body
    height: 20rem
  &-row
    min-width: 100%
    display: inline-table
    border-bottom: 1px solid var(--c-border-neutral-extralight)
    &.last-row
      margin-bottom: 56px
  &-cell
    width: 33%