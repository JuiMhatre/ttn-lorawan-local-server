.sidebar
  border-normal(right)
  line-height: 1
  font-size: $fs.s
  min-width: 19rem
  sidebar-transition(min-width)
  +media-query($bp.m)
    sidebar-transition(left, box-shadow)
    top: $header-height-mobile
    left: -60vw
    bottom: 0
    width: 60vw
    max-width: 20rem
    min-width: 15rem

    &-open
      box-shadow: 0 0 13rem 2rem rgba(0,0,0,.4)
      left: 0

  &-minimized
    width: 3.5rem
    min-width: initial
    max-width: initial
